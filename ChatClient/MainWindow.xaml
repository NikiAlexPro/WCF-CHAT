<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="43" Margin="214,10,0,0" TextWrapping="Wrap" Text="Имя Пользователя" VerticalAlignment="Top" Width="554"/>
        <Button x:Name="buttonConnectDisconnect" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="27,10,0,0" VerticalAlignment="Top" Width="161" Height="43"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="243" Margin="27,67,0,0" VerticalAlignment="Top" Width="741"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="86" Margin="27,323,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="741" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
